<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_box"
    android:padding="20dp"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageButton
            android:id="@+id/closeV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Email Verification"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="We've send a code to your email account!"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/clickEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"
            android:text="dctrrohan@mail.com"
            android:textColor="#149BE4"
            android:onClick="onClick"
            android:clickable="true"
            android:textStyle="bold" />
        <EditText
            android:padding="10dp"
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter code"
            android:drawableLeft="@drawable/code"
            android:drawablePadding="10dp"
            android:textSize="15sp"

            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:paddingStart="10dp"
            android:paddingTop="9dp"
            android:paddingEnd="10dp"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't received a code? Check email if Existing"
            android:textSize="14sp"
            android:textColor="#F1EDED"
            android:layout_marginRight="2dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:paddingStart="10dp"
            android:paddingTop="9dp"
            android:id="@+id/expired"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Code will expired in"
            android:textColor="#D1CBCB"
            android:layout_marginRight="2dp"
            />
        <TextView
            android:id="@+id/countdown"
            android:paddingTop="9dp"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#1D7EE6"
            android:layout_marginRight="2dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:paddingStart="10dp"
            android:paddingTop="9dp"
            android:id="@+id/resend"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#3C96F6"
            android:layout_marginRight="2dp"
            />

    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="verify"
        app:cornerRadius="17dp"
        />



</LinearLayout>