<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_box"

    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        >

        <TextView
            android:paddingHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Email Verification"
            android:textColor="#000"
            android:textSize="25sp"

            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="We've send a code to your email account!"
            android:textSize="15sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/clickEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"
            android:text="dctrrohan@mail.com"
            android:textColor="#427FCA"
            android:onClick="onClick"
            android:clickable="true"
            android:textStyle="bold" />
        <EditText
            android:padding="10dp"
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter code"
            android:drawableLeft="@drawable/code"
            android:backgroundTint="@color/trans"
            android:drawablePadding="10dp"
            android:textSize="15sp"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@color/trans"
        android:orientation="horizontal"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:background="@color/trans"
        android:orientation="horizontal"
        >
        <TextView
            android:paddingStart="10dp"
            android:paddingTop="9dp"
            android:id="@+id/expired"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Code will expired in"
            android:textColor="#393737"
            android:layout_marginRight="2dp"
            />
        <TextView
            android:id="@+id/countdown"
            android:paddingTop="9dp"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#1D7EE6"
            android:layout_marginRight="2dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@color/trans"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:drawablePadding="2dp"
            android:paddingStart="10dp"
            android:paddingTop="9dp"
            android:textColor="#3C96F6"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:layout_gravity="bottom"
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="verify"
        app:cornerRadius="0dp"
        />
</LinearLayout>